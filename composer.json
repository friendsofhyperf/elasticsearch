{
    "name": "friendsofhyperf/elasticsearch",
    "description": "A component for elasticsearch",
    "type": "library",
    "homepage": "https://github.com/friendsofhyperf/elasticsearch",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "elasticsearch/elasticsearch": "^7.12",
        "hyperf/elasticsearch": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14|^3.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/di": "^2.0",
        "hyperf/utils": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\Elasticsearch\\": "src/"
        }
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\Elasticsearch\\ConfigProvider"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src"
    }
}